<%- include('partials/navbar') %>

<div class="container" style="padding: 20px; font-family: 'Segoe UI', sans-serif;">
  <div style="display: flex; gap: 20px; flex-wrap: wrap;">
    <% if (product.thumbnail) { %>
      <img src="<%= product.thumbnail %>" alt="<%= product.title %>" style="max-width: 300px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
    <% } %>
    <div style="flex: 1;">
      <h1><%= product.title %></h1>
      <p style="font-size: 1.2em; color: green;"><strong>Price:</strong> $<%= product.price %></p>
      <p style="line-height: 1.6;"><strong>Description:</strong> <%= product.description %></p>
      <a href="/products" style="margin-top: 20px; display: inline-block; padding: 8px 16px; background-color: #28a745; color: white; text-decoration: none; border-radius: 4px;">Back to Products</a>
    </div>
  </div>
</div>
